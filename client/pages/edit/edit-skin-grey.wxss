@import "../../themes/skin-grey.wxss";

.page {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    padding-top: 3%;
    height: 1500rpx;
}

#skin-grey .rss-form {
    margin-top: 5%;
    margin-left: 4%;
    margin-right: 4%;
    padding: 3%;
    /*border-radius: 20px;*/
    /*background-color: rgb(242, 240, 236);*/
    background-color: var(--grey-edit-form-bk);
}

#skin-grey .rss-description {
    margin-left: 3%;
    margin-right: 3%;
}

#skin-grey .input-prefix {
    color: var(--grey-edit-label-title);
    font-weight: bold;
    font-size: large;
}

#skin-grey .line {
    margin-top: 8rpx;
    width: 100%;
    height: 2rpx;
    background-color: var(--grey-edit-placeholder);
}

#skin-grey .space {
    height: 4rpx;
}
#skin-grey .custom-placeholder {
    color: var(--grey-edit-placeholder);
    font-size: medium;
}

#skin-grey .favicon-view {

}

#skin-grey .favicon {
    margin-left: auto;
    margin-right: auto;
    display: block;
    width: 100px;
    height: 100px;
}

#skin-grey .cancel-ok-buttons {
    display: flex;
    flex-direction: row;
}

#skin-grey .ok-button-view {
    position: fixed;
    bottom: 3%;
    right: 25%;
}

#skin-grey .cancel-button-view {
    position: fixed;
    bottom: 3%;
    left: 25%
}

#skin-grey .rss-button {
    border-radius: 50px;
    background-color: var(--grey-edit-button-bk);
    /*height: 150rpx;*/
    /*width: 150rpx;*/
    border: 0px !important;
}