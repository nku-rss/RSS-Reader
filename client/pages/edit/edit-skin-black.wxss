@import "../../themes/skin-black.wxss";

.page {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    padding-top: 3%;
    height: 1500rpx;
}

#skin-black .rss-form {
    margin-top: 5%;
    margin-left: 4%;
    margin-right: 4%;
    padding: 3%;
    border: 2rpx var(--black-edit-form-border) solid;
    /*border-radius: 20px;*/
    /*background-color: rgb(242, 240, 236);*/
    background-color: var(--black-edit-form-bk);
    /*background-color: white;*/
}

#skin-black .rss-description {
    margin-left: 3%;
    margin-right: 3%;
}

#skin-black .input-prefix {
    color: var(--black-edit-label-title);
    font-weight: bold;
    font-size: large;
}

#skin-black .line {
    margin-top: 8rpx;
    width: 100%;
    height: 2rpx;
    background-color: var(--black-edit-placeholder);
}

#skin-black .space {
    height: 4rpx;
}
#skin-black .custom-placeholder {
    color: var(--black-edit-placeholder);
    font-size: medium;
}

#skin-black .favicon-view {

}

#skin-black .favicon {
    margin-left: auto;
    margin-right: auto;
    display: block;
    width: 100px;
    height: 100px;
}

#skin-black .cancel-ok-buttons {
    display: flex;
    flex-direction: row;
}

#skin-black .ok-button-view {
    position: fixed;
    bottom: 3%;
    right: 25%;
}

#skin-black .cancel-button-view {
    position: fixed;
    bottom: 3%;
    left: 25%
}

#skin-black .rss-button {
    border-radius: 50px;
    background-color: var(--black-edit-button-bk);
    /*height: 150rpx;*/
    /*width: 150rpx;*/
    border: 0px !important;
}

#skin-black .load-modal-dialog {
    /*width: 540rpx;*/

    overflow: hidden;

    position: fixed;

    top: 40%;

    left: 50%;

    transform: translate(-50%, 0);

    width: 40rpx;

    z-index: 9999;

    /*background: var(--grey-page-bk);*/

    /*margin: -180rpx 105rpx;*/

    /*border-radius: 36rpx;*/

    display: flex;

    flex-direction: row;

    padding: 20rpx;
}