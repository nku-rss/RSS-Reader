<!-- client/pages/allPost/allPost.wxml -->
<van-tabs animated type="card" bind:click="onClick" active="0" tab-class="tab-class" nav-class="nav-class" tab-active-class="tab-active-class">
  <van-tab title="博文" class="test">
    
    <view class="rss-posts">
      <view class="myview" wx:for="12345678">
        <van-swipe-cell right-width="{{ 65 }}" left-width="{{ 65 }}" async-close bind:close="onClose">
          <view slot="left">{{'选择'+item}}</view>
          <van-cell-group  border="{{false}}">
            <van-cell is-link url="../article/article" link-type="navigateTo" custom-class="one-rss" title="{{'博文' + item}}" value="{{'内容' + item}}" size="large" label="{{'描述信息' + item}}"  border="{{false}}" />
          </van-cell-group>
          <view slot="right">{{'删除'+item}}</view>
        </van-swipe-cell>
      </view>
    </view>


