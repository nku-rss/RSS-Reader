@import "../../themes/skin-black.wxss";

.page {
  padding-top: 3%;
  /*background-color: var(--black-page-bk);*/
  position: fixed;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
}


#skin-black .nav-class {
  margin: 0 20%;
  z-index: 100;
  /*border-radius: 25rpx;*/
  border: 0rpx !important;
}

#skin-black .cell-with-margin {
  margin-top: 25rpx;
}

#skin-black .tab-class {
  background-color: var(--black-tab) !important;
  color: var(--black-tab-title) !important;
  /*border-radius: 15rpx;*//*border: 0rpx !important;*/
  border: var(--black-cell-title) 2rpx solid;
}

#skin-black .tab-active-class {
  background-color: var(--black-tab-active) !important;
  color: var(--black-tab-title) !important;
  /*border: 0rpx !important;*/
  border: var(--black-cell-title) 2rpx solid;
}

#skin-black .one-rss {
  background-color: var(--black-cell-bk) !important;
  border: var(--black-cell-title) 2rpx solid;
}

#skin-black .rss-posts {
  margin: 50rpx 0rpx 150rpx 0rpx;
}

#skin-black .van-tabs__scroll--card {
  border: 0px !important;
  background-color: var(--black-page-bk);
  border-radius: 0rpx !important;
}

#skin-black .van-swipe-cell {
  /*border-radius: 25rpx;*/
}

#skin-black .van-swipe-cell__left {
  display: inline-block;
  width: 65px;
  /*height: 44px;*/
  font-size: 15px;
  line-height: 44px;
  color: var(--black-cell-swipe-title);
  text-align: center;
  background-color: var(--black-cell-swipe-left);
  /*替换成flex 可能有bug，但目前未知*/
  display: flex;
  align-items: center;
  justify-content: center;
}

#skin-black .van-swipe-cell__right {
  display: inline-block;
  width: 65px;
  /*height: 44px;*/
  font-size: 15px;
  line-height: 44px;
  color: var(--black-cell-swipe-title);
  text-align: center;
  background-color: var(--black-cell-swipe-right);
  /*替换成flex 可能有bug，但目前未知*/
  display: flex;
  align-items: center;
  justify-content: center;
}

#skin-black .button-holder-left {
  position: absolute;
  width: 160rpx;
  height: 70rpx;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 5;
}

#skin-black .button-holder-right {
  position: absolute;
  width: 160rpx;
  height: 70rpx;
  top: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 5;
}

