} */

#skin-black .change-skin {
  position: fixed;
  top: 18rpx;
  left: 22rpx;
  z-index: 100;
}

#skin-black .change-skin-button {
  border: 0rpx !important;
}

#skin-black .unread-star-buttons {
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0;
  background-color: var(--black-page-bk);
  width: 100%;
}

#skin-black .tabbar-button {
  background-color: var(--black-page-bk);
  border: 0px !important;
  color: var(--black-cell-label);
}

button::after {
  border: none;
}

#skin-black .button-hover {
  color: var(--black-page-bk);
}

#skin-black .tabbar-view-1 {
  position: absolute;
  left: 20%;
}

#skin-black .tabbar-view-2 {
  position: relative;
  left: 50%;
  transform: translateX(-50%);
}

#skin-black .tabbar-view-3 {
  position: absolute;
  right: 20%;
}

#skin-black .van-cell__title {
  color: var(--black-cell-title);
}

#skin-black .van-cell__label {
  color: var(--black-cell-label) !important;
}

#skin-black .van-cell__value {
  color: var(--black-cell-value) !important;
}

/*对话窗*/

#skin-black .modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

#skin-black .modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: var(--black-page-bk);
  margin: -180rpx 105rpx;
  /*border-radius: 36rpx;*/
  color: white 2rpx solid;
}

#skin-black .modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: rgb(242, 240, 236);
  text-align: center;
  margin-bottom: 30rpx;
}

#skin-black .modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 0px;
  font-size: 34rpx;
  line-height: 86rpx;
}

#skin-black .btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 0px;
}

#skin-black .btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
  border: 0px;
}

