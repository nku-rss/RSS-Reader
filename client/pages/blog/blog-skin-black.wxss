@import "../../themes/skin-black.wxss";

.page {
    height: 2000rpx;
}

#skin-black .van-swipe-cell {
    /*border-radius: 25rpx;*/
}

#skin-black .van-swipe-cell__left,
#skin-black .van-swipe-cell__right {
    display: inline-block;
    width: 65px;
    height: 44px;
    font-size: 15px;
    line-height: 44px;
    color: #fff;
    text-align: center;
    background-color: var(--black-cell-swipe-left);
}

#skin-black .one-rss {
    /*margin: 10rpx; */
    background-color: var(--black-cell-bk) !important;
    border: var(--black-cell-title) 2rpx solid;
}

#skin-black .cell-with-margin {
    margin-top:25rpx;
}

#skin-black .rss-posts {
    margin: 50rpx 0rpx 25rpx 0rpx;
    margin-left: 5%;
    margin-right: 5%;
    margin-top: 10%;
}

#skin-black .blog-avatar {
    display: flex;
    position: fixed;
    top: 0rpx;
    width: 100%;
    /*height: 120rpx;*/
    /*background-color: red;*/
    z-index: 100;
    align-items: center;
    justify-content: center;
}

#skin-black .blog-icon {
}

#skin-black .blog-icon-image {
    width: 30rpx;
    height: 30rpx;
}

#skin-black .blog-name {
    color: var(--black-blog-name);
    font-size: large;
    margin-left: 20rpx;
}

/*文字显示*/
#skin-black .van-cell__title {
    color: var(--black-cell-title) !important;
}

#skin-black .van-cell__label {
    color: var(--black-cell-label) !important;
}

#skin-black .van-cell__value {
    color: var(--black-cell-value) !important;
}
